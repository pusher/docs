<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/docs/static/style.min.css" rel="stylesheet" />
    <title>{% if title %}{{ title }}{% else %} Pusher Docs {% endif %}</title>

    {%- set metaDesc -%}{{ content | extractFirstPara }}{%- endset -%}

    {% metagen
        desc=description or metaDesc or meta.desc,
        url=site.url + page.url,
        img=meta.img,
        img_alt=meta.img_alt,
        twitter_card_type=meta.twitter_card_type,
        twitter_handle=meta.twitter_handle,
        name=meta.name
    %}

    <script>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-PK3QL4M');
    </script>
  </head>
  <body class="relative min-vh-100">
    <noscript><iframe src=“https://www.googletagmanager.com/ns.html?id=GTM-PK3QL4M” height=“0" width=“0” style=“display:none;visibility:hidden”></iframe></noscript>

    {% block header %}
    {% endblock %}

    <div class="relative flex flex-column flex-row-l">
    {% block nav %}
    {% endblock %}
    <div class="flex-grow-1 flex flex-column justify-between {{ contentWrapClasses }} z-0">
      {% block container %}
        {{ content | safe }}
      {% endblock %}
    
      {% include "partials/footer.njk" %}
    </div>
    </div>

    <script type="module" src="/docs/static/js/application.mjs" rel="preload"></script>

    {% if env.includeAnalytics %}
      {% include "partials/analytics.njk" %}
    {% endif %}
  </body>
</html>
